<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>Login</title>


    <style>
        i.bi {
            font-size: 24px;
            cursor: pointer;
            padding: 0 0.125rem;
            margin: 0 0.25rem;
        }

        .google-login-btn {
            color: orangered;
        }

        .facebook-login-btn {
            color: blue;
        }

        .login-container {
            margin: auto;
            min-height: 100vh;
            display: flex;
            flex-flow: column nowrap;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <form action="/login" method="POST">
                <div class="login-container col-6 mx-auto">
                    <fieldset class="border rounded-3 p-3">
                        <legend class="float-none w-auto px-3">Login Form</legend>
                        <% if( error !="" ){ %>
                            <div class="alert alert-danger my-1" role="alert">
                                <%= error %>
                            </div>
                            <% } %>
                                <!-- <div class="input-group has-validation">
                            <input name="empty" placeholder="" class="form-control d-none is-invalid" />
                            <div class="invalid-feedback">
                                <%= error %>
                            </div>
                        </div> -->
                                <div class="mb-3">
                                    <label for="email">Email or phone: </label>
                                    <div class="input-group has-validation">
                                        <input type="text" class="form-control <% if(error != ''){ %>
                                            is-invalid
                                          <% } %>" id="email" name="email" />
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="password">Password: </label>
                                    <div class="input-group has-validation">
                                        <input type="password" class="form-control <% if(error != ''){ %>
                                            is-invalid
                                          <% } %>" id="password" name="password" />
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary">Log in</button>
                                <hr />

                                <div class="other-logins text-center">
                                    <span>Or login with: </span>
                                    <div class="login-list">
                                        <i class="google-login-btn bi bi-google" title="login with google"></i>
                                        <i class="facebook-login-btn bi bi-facebook" title="login with facebook"></i>
                                    </div>
                                </div>

                    </fieldset>
                </div>
            </form>
        </div>
    </div>
</body>

</html>