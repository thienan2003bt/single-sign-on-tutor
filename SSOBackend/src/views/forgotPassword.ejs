<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- JQuery -->
    <script src="
     https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js
     "></script>

    <title>Single Sign On Tutorial</title>
</head>

<body>
    <div class="forgot-password-form container mt-3">
        <div class="row">
            <div class="mb-3 col-9">
                <label for="email">Email: </label>
                <input type="text" class="form-control" id="email" name="email" />
            </div>
            <div class="mb-3 col-3">
                <label class="intentionalLabelForUI"></label>
                <div></div>
                <button id="sendOTPCodeBtn" class="btn btn-success w-100">Send CODE</button>
            </div>
            <div class="mb-3">
                <label for="OPTCode">Enter CODE: </label>
                <input type="password" class="form-control" id="OPTCode" name="OPTCode" />
            </div>
            <div class="mb-3">
                <label for="new_password">New password: </label>
                <input type="password" class="form-control" id="new_password" name="new_password" />
            </div>
            <div class="mb-3">
                <label for="retype_password">Retype password: </label>
                <input type="password" class="form-control" id="retype_password" name="retype_password" />
            </div>

            <button type="button" class="mt-2 mx-auto btn btn-primary w-50">Confirm</button>
        </div>
    </div>
</body>

<script>
    $('#sendOTPCodeBtn').on('click', () => {
        const email = $('#email').val();
        if (!email) {
            return alert('Please enter your email address!')
        }
        $.ajax({
            type: 'POST',
            url: `${window.location.origin}/send-code`,
            data: { email },
            withCredentials: true,
            success: (data) => {
                alert("Data: " + JSON.stringify(data));
            },
            error: (request, status, error) => {

            }
        })
    })
</script>

</html>