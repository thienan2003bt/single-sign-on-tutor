<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <title>JWT Auth Manager</title>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="user-info-container">
                <form action="/user/create" method="POST">
                    <div class="pt-3">
                        <h3>Create a new user:</h3>
                    </div>
                    <div class="mb-3 mt-3 col-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" required class="form-control" name="email" id="email">
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" required class="form-control" name="password" id="password">
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6 pb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" required class="form-control" name="username" id="username">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>

                </form>
            </div>

            <div class="table-user mt-4">
                <h3>Table of users: </h3>
                <table class="table table-dark table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">User ID</th>
                            <th scope="col">Email</th>
                            <th scope="col">Username</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% userList.forEach(function(user, index) { %>
                            <tr>
                                <th scope="row">
                                    <%= index + 1 %>
                                </th>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <a class="btn btn-warning" href="http://localhost:8080/user/update/<%= user.id %>">
                                        Edit
                                    </a>
                                    <form style="display: inline;" method="POST" action="/user/delete/<%= user.id %>">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</body>

</html>